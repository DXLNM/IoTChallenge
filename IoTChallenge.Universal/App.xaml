<Application
    x:Class="IoTChallenge.Universal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoTChallenge.Universal"
    RequestedTheme="Light">
    <Application.Resources>
        <DataTemplate x:Name="listTemplate">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Height="50" Width="30"
                       Source="{Binding gender}"/>
                    <StackPanel >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ageOfPerson}"/>
                            <TextBlock Text=" years old"/>
                        </StackPanel>
                        <TextBlock Text="{Binding transformedDate}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
